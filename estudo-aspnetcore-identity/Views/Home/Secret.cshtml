@using estudo_aspnetcore_identity.Extensions

@{
    ViewData["Title"] = "Secret Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Segredo!</p>

@{
    if(this.IfClaim("Produtos", "Adicionar"))
    {
        <p>Você só verá isso se tiver permissão de adicionar!</p>
    }
}

<div>
    @Html.ActionLink(linkText: "Secret", actionName: "Secret")
         .IfClaimShow(Context, "Produtos", "Adicionar");
</div>

<div>
    <br/>
    <a href="#" class="btn btn-danger @Html.Raw(this.IfClaimShow("Produto", "Adicionar"))">Excluir</a>
</div>